<Window x:Class="TwoTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <WrapPanel Orientation="Vertical">
        <TextBox Name="txtValue1" Width="100" Text="{Binding ElementName=txtValue2, Path=Text }" />
        <TextBox Name="txtValue2" Width="100" Text="{Binding ElementName=txtValue1, Path=Text }" />
    </WrapPanel>
</Window>
